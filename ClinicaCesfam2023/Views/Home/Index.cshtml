        overflow: hidden;
        margin: 16px;
        text-align: center;
        transition: all 0.25s;
    }

.container .card:hover{
    transform: translateY(-15px);
    box-shadow: 0 12px 16px rgba(0, 0, 0, 0.2);
}

.container .card img{
    width: 290px;
    height: 220px;
    margin-top: 16px;
}

.container .card h4{
    font-weight: 600;
}

.container .card p{
    padding:0 1rem;
    font-size: 15px;
    font-weight: 200;
}

.container .card a{
    font-weight: 500;
    text-decoration: none;
    color: #0400ff;
}

.container .card input{

    position: relative;
