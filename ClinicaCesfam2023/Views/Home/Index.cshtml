*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

img{
    width: 20%;
}

header{
    text-align: center;



}
    body {
        background-image: linear-gradient(90deg, rgba(67,93,221,1) 0%, rgba(0,212,255,0.7063200280112045) 53%);
        width: 100%;
    }



/* CUADROS HOOVER*/





.tittle{
    text-align: center;
    font-size: 40px;
    color: #6a6a6a;
    margin-top: 100px;
    font-weight: 100;
    font-family: 'calibri';
}



.container{

    width: 100%;
    max-width: 1200px;
    height: 430px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: auto;

}

    .container .card {
        background-image: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(0,245,255,0.1741071428571429) 1%);
